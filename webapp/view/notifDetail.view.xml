<mvc:View controllerName="com.sap.incture.IMO_PM.controller.notifDetail" xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml" displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout"
	xmlns:tnt="sap.tnt" xmlns:u="sap.ui.unified" xmlns:c="sap.ui.core">
	<Page showHeader="true" class="sapUiSizeCompact sapMPageBackground" floatingFooter="false" enableScrolling="false">
		<tnt:ToolHeader class="headerBG headerShadow">
			<Label design="Bold" class="sapUiSmallMarginBegin textColr" text="{i18n>notifDetails}" wrapping="true"/>
			<ToolbarSpacer/>
			<c:Icon src="sap-icon://grid" tooltip="Open Attachments" press="onPressAttachments" color="#142e5e" class="attachmentsIconSize"/>
		</tnt:ToolHeader>
		<content>
			<Toolbar class="sapUiTinyMarginTop tableHeaderBG" height="3rem">
				<Button text="{i18n>updatenot}" id="updateNotif" press="checkMandatoryFields" icon="sap-icon://save" iconFirst="true"
					class="sapUiSmallMarginBegin"
					visible="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setBtnVisibleUpdate'}" type="Emphasized">
					<customData>
						<core:CustomData key="dateType" value="UPDATE"/>
					</customData>
				</Button>
				<Button text="{i18n>close_notif}" id="idcloseNotif" press="fnSaveandCloseNotif" class="tableHeadertansparentBtn"
					visible="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setBtnVisibleClose'}"
					icon="sap-icon://decline" iconFirst="true"/>
				<Button text="{i18n>revert_Notif}" id="idrevertNotif" class="tableHeadertansparentBtn" press="onRevertNotif"
					visible="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setBtnVisibleRevert'}"/>
				<!--<ToolbarSpacer/>-->
				<Button text="{i18n>APPROVE}" id="releaseButton" class="tableHeadertansparentBtn" press="onPressRelease"
					visible="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setBtnVisibleRelease'}"/>
				<Button text="{i18n>CREATEORDER}" id="idCreateOrder" class="tableHeadertansparentBtn" press="onCreateWODialogOpen"
					visible="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setBtnVisibleCreateOrder'}"/>
				<customData>
					<core:CustomData key="dateType" value="DETAIL_NOTIF"/>
				</customData>
			</Toolbar>
			<VBox height="{mLookupModel>/notificationPanelHeight}" class="iopRightPanelContainer"
				width="{= ${mLookupModel>/showTaskManagementPanel} === true ? '20rem' : '0' }">
				<c:Fragment fragmentName="com.sap.incture.IMO_PM.fragment.RightAttachmentPanel" type="XML" id="idRightAttachmentPanel"></c:Fragment>
			</VBox>
			<OverflowToolbar class="sapUiTinyMarginTop">
				<Label text="Notification List" class="sapUiSmallMarginBegin" wrapping="true"/>
				<core:Icon src="sap-icon://navigation-right-arrow" class="sapUiTinyMarginBegin iconSize1" color="#96999b"></core:Icon>
				<Label text="Notification Number: " class="sapUiTinyMarginBegin murphyLabelColor"/>
				<Text text="{oNotificationDataModel>/Notifid}" class="murphyLabelColor"/>
				<ToolbarSpacer/>
				<Label text="{i18n>NOTIF_STATUS} :" class="sapUiSmallMarginBegin panelTextColor1"></Label>
				<Text text="{mLookupModel>/SysStatus}"></Text>
				<Label text="{i18n>USER_STATUS} :" class="sapUiSmallMarginBegin panelTextColor1"></Label>
				<Text text="{path:'mLookupModel>/Userstatus',formatter:'com.sap.incture.IMO_PM.formatter.formatter.fnNotifUserStatus'}  "></Text>
				<!--<VBox class="gridPadding">-->
				<!--		<Input value="{mLookupModel>/SysStatus}" class="inputRadius" width="90%" enabled="false"/>-->
				<!--	</VBox>-->
				<!--	<VBox class="gridPadding">-->
				<!--		<Input value="{mLookupModel>/Userstatus}" class="inputRadius" width="90%" enabled="false"/>-->
				<!--	</VBox>-->
			</OverflowToolbar>
			<ScrollContainer height="calc(100vh - 11.5rem)" vertical="true">
				<l:Grid defaultSpan="XL3 L3 M6 S12" class="sapUiSmallMargin gridBG" vSpacing="0">
					<OverflowToolbar class="createNotifOverflowBorder">
						<Label design="Bold" text="{i18n>SUBJECT}" wrapping="true"/>
						<layoutData>
							<l:GridData span="XL12 L12 M12 S12"></l:GridData>
						</layoutData>
					</OverflowToolbar>
					<VBox class="gridPadding">
						<Label text="{i18n>notifType}"></Label>
						<ComboBox showSecondaryValues="true" items="{path:'mLookupModel>/aNotificationTypeSet',sorter:{ path: 'text' }}"
							selectedKey="{oNotificationDataModel>/NotifType}" class="inputRadius" enabled="false" width="90%">
							<core:ListItem key="{mLookupModel>Qmart}" additionalText="{mLookupModel>qmartx}" text="{mLookupModel>Qmart}"/>
						</ComboBox>
					</VBox>
					<VBox class="gridPadding">
						<Label text="{i18n>workOrder}"></Label>
						<Input value="{oNotificationDataModel>/Orderid}" class="inputRadius" width="90%" enabled="false"/>
					</VBox>
					<!--<VBox class="gridPadding">
					<Label text="{i18n>NOTIF_ID}"></Label>
					<Input value="{oNotificationDataModel>/Notifid}" class="inputRadius" width="90%" enabled="false"/>
				</VBox>-->
					<VBox>
						<layoutData>
							<l:GridData span="XL9 L9 M8 S12"/>
						</layoutData>
					</VBox>
					<VBox class="gridPadding">
						<Label text="{i18n>desc}"></Label>
						<Input value="{oNotificationDataModel>/ShortText}" width="90%" tooltip="{oNotificationDataModel>/ShortText}" maxLength="40"
							class="inputRadius"
							enabled="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setEnabledBasedOnStatus'}"></Input>
					</VBox>
					<VBox class="gridPadding">
						<Label text="{i18n>longText}"/>
						<TextArea width="96%" value="{oNotificationViewModel>/Longtext}" tooltip="{oNotificationViewModel>/Longtext}" rows="1" cols="30"
							maxLength="2000" class="inputRadius"
							enabled="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setEnabledBasedOnStatus'}"/>
						<layoutData>
							<l:GridData span="XL6 L6 M6 S12"></l:GridData>
						</layoutData>
					</VBox>
					<OverflowToolbar class="createNotifOverflowBorder">
						<Label design="Bold" text="{i18n>refObject}" wrapping="true"/>
						<layoutData>
							<l:GridData span="XL12 L12 M12 S12"></l:GridData>
						</layoutData>
					</OverflowToolbar>
					<VBox class="gridPadding">
						<Label text="{i18n>notif_Priority}" required="true"></Label>
						<ComboBox items="{ path: 'mLookupModel>/aPrioritySet', sorter: { path: 'text' } }" selectedKey="{oNotificationDataModel>/Priority}"
							class="inputRadius" width="90%" showSecondaryValues="true" change="onChangePriority"
							enabled="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setEnabledBasedOnStatus'}">
							<core:Item key="{mLookupModel>PRIOK}" text="{mLookupModel>PRIOKX}"/>
						</ComboBox>
					</VBox>
					<VBox class="gridPadding">
						<Label text="{i18n>FunLocation}"></Label>
						<Input width="90%" editable="true" showValueHelp="true" value="{oNotificationDataModel>/FunctLoc}" valueHelpOnly="false"
							valueHelpRequest="fnLocValueHelp" class="inputRadius"
							enabled="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setEnabledBasedOnStatus'}"></Input>
					</VBox>
					<VBox class="gridPadding">
						<Label text="{i18n>equip}"></Label>
						<Input width="90%" showValueHelp="true" value="{oNotificationDataModel>/Equipment}" valueHelpRequest="openEquipmentListValueHelp"
							tooltip="{oNotificationDataModel>/Equipment}" class="inputRadius" maxLength="18"
							enabled="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setEnabledBasedOnStatus'}"></Input>
					</VBox>
					<VBox class="gridPadding">
						<Label text="{i18n>subAssemb}"></Label>
						<ComboBox showSecondaryValues="true" items="{mLookupModel>/aEquipAssemblyList}" selectedKey="{oNotificationDataModel>/Assembly}"
							class="inputRadius" width="90%"
							enabled="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setEnabledBasedOnStatus'}">
							<core:ListItem key="{mLookupModel>Idnrk}" text="{mLookupModel>Idnrk} - {mLookupModel>MAKTX}"/>
						</ComboBox>
					</VBox>
					<VBox class="gridPadding">
						<Label text="{i18n>assigned_To}"></Label>
						<ComboBox showSecondaryValues="true" class="inputRadius" width="90%" selectedKey="{mLookupModel>/assignedToHardCode}"
							enabled="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setEnabledBasedOnStatus'}">
							<core:ListItem key="John Smith" text="John Smith"/>
							<core:ListItem key="Andrew Goal" text="Andrew Goal"/>
						</ComboBox>
					</VBox>
					<OverflowToolbar class="createNotifOverflowBorder">
						<Label design="Bold" text="{i18n>resp}" wrapping="true"/>
						<layoutData>
							<l:GridData span="XL12 L12 M12 S12"></l:GridData>
						</layoutData>
					</OverflowToolbar>
					<VBox class="gridPadding">
						<Label text="{i18n>notif_Priority}" required="true"></Label>
						<ComboBox items="{ path: 'mLookupModel>/aPrioritySet', sorter: { path: 'text' } }" selectedKey="{oNotificationDataModel>/Priority}"
							class="inputRadius" width="90%" showSecondaryValues="true"
							enabled="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setEnabledBasedOnStatus'}">
							<core:Item key="{mLookupModel>PRIOK}" text="{mLookupModel>PRIOKX}"/>
						</ComboBox>
					</VBox>
					<VBox class="gridPadding">
						<Label text="{i18n>planner}"></Label>
						<Select class="selectRadius" forceSelection="false" selectedKey="{oNotificationDataModel>/Plangroup}" width="90%"
							tooltip="{oNotificationDataModel>/Plangroup}" items="{mLookupModel>/aPlannerGroupSet}" showSecondaryValues="true"
							enabled="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setEnabledBasedOnStatus'}">
							<core:ListItem key="{mLookupModel>VAGRP}" text="{mLookupModel>VAGRP} - {mLookupModel>TXT}"/>
						</Select>
					</VBox>
					<VBox class="gridPadding">
						<Label text="{i18n>notif_PlanningPlant}" required="true"></Label>
						<ComboBox class="inputRadius" width="90%" selectedKey="4321"
							enabled="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setEnabledBasedOnStatus'}">
							<core:Item key="4321" text="4321"/>
						</ComboBox>
					</VBox>
					<VBox class="gridPadding">
						<Label text="{i18n>notif_mainWorkCtr}" required="true"></Label>
						<ComboBox showSecondaryValues="true" items="{path:'mLookupModel>/aWorkCenterSet',sorter:{ path: 'text' }}"
							selectedKey="{oNotificationDataModel>/WorkCenter}" class="inputRadius"
							enabled="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setEnabledBasedOnStatus'}" width="90%">
							<core:ListItem key="{mLookupModel>WorkcenterId}" additionalText="{mLookupModel>WorkcenterDesc}" text="{mLookupModel>WorkcenterId}"/>
						</ComboBox>
					</VBox>
					<VBox class="gridPadding">
						<Label text="{i18n>notif_plant}" required="true"></Label>
						<ComboBox class="inputRadius" width="90%" selectedKey="4321"
							enabled="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setEnabledBasedOnStatus'}">
							<core:Item key="4321" text="4321"/>
						</ComboBox>
					</VBox>
					<VBox class="gridPadding">
						<Label text="{i18n>repBy}"></Label>
						<Input value="{oNotificationDataModel>/Reportedby}" showValueHelp="true" width="90%" valueHelpRequest="handleValueHelp"
							tooltip="{oNotificationDataModel>/Reportedby}" valueHelpOnly="true" class="inputRadius"
							enabled="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setEnabledBasedOnStatus'}"/>
					</VBox>
					<VBox class="gridPadding">
						<Label text="Required Start Date"></Label>
						<DatePicker placeholder="dd-MM-yyyy" dateValue="{oNotificationDataModel>/ReqStartdate}" width="90%" displayFormat="dd-MM-yyyy"
							enabled="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setEnabledBasedOnStatus'}"
							change="fnValidateDates" class="inputRadius">
							<customData>
								<core:CustomData key="dateType" value="ReqStartdate"/>
							</customData>
						</DatePicker>
					</VBox>
					<VBox class="gridPadding">
						<Label text="Required End Date"></Label>
						<DatePicker placeholder="dd-MM-yyyy" dateValue="{oNotificationDataModel>/ReqEnddate}" width="90%" displayFormat="dd-MM-yyyy"
							enabled="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setEnabledBasedOnStatus'}"
							change="fnValidateDates" class="inputRadius">
							<customData>
								<core:CustomData key="dateType" value="ReqEnddate"/>
							</customData>
						</DatePicker>
					</VBox>
					<OverflowToolbar class="createNotifOverflowBorder"
						visible="{path:'oNotificationDataModel>/NotifType',formatter:'com.sap.incture.IMO_PM.formatter.formatter.fnToggleBreakdownVisibility'}">
						<Label design="Bold" text="Breakdown" wrapping="true"/>
						<layoutData>
							<l:GridData span="XL12 L12 M12 S12"></l:GridData>
						</layoutData>
					</OverflowToolbar>
					<VBox class="gridPadding"
						visible="{path:'oNotificationDataModel>/NotifType',formatter:'com.sap.incture.IMO_PM.formatter.formatter.fnToggleBreakdownVisibility'}">
						<Label text="{i18n>breakDown}"></Label>
						<Switch state="{path:'oNotificationDataModel>/Breakdown', formatter:'com.sap.incture.IMO_PM.formatter.formatter.formatBooleanBreakDown'}"
							customTextOn="{i18n>yes}" customTextOff="{i18n>no}" change="fnUpdateBreakDownStatus" id="idBreakDownSwitch"
							enabled="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setEnabledBasedOnStatus'}"/>
					</VBox>
					<VBox class="gridPadding"
						visible="{path:'oNotificationDataModel>/NotifType',formatter:'com.sap.incture.IMO_PM.formatter.formatter.fnToggleBreakdownVisibility'}">
						<Label text="{i18n>BDownDuration}"></Label>
						<Input value="{path:'oNotificationDataModel>/BreakdownDur'} " width="90%" tooltip="{oNotificationDataModel>/BreakdownDur}" maxLength="7"
							enabled="false" class="inputRadius"></Input>
					</VBox>
					<VBox class="gridPadding"
						visible="{path:'oNotificationDataModel>/Breakdown', formatter:'com.sap.incture.IMO_PM.formatter.formatter.formatBooleanBreakDown'}">
						<VBox
							visible="{path:'oNotificationDataModel>/NotifType',formatter:'com.sap.incture.IMO_PM.formatter.formatter.fnToggleBreakdownVisibility'}">
							<Label text="{i18n>malfnsDate}"></Label>
							<DatePicker placeholder="dd-MM-yyyy" dateValue="{oNotificationDataModel>/Startdate}" width="90%" displayFormat="dd-MM-yyyy"
								change="fnValidateMalFunDates" class="inputRadius"
								enabled="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setEnabledBasedOnStatus'}">
								<customData>
									<core:CustomData key="dateType" value="Startdate"/>
								</customData>
							</DatePicker>
						</VBox>
					</VBox>
					<VBox class="gridPadding"
						visible="{path:'oNotificationDataModel>/Breakdown', formatter:'com.sap.incture.IMO_PM.formatter.formatter.formatBooleanBreakDown'}">
						<VBox
							visible="{path:'oNotificationDataModel>/NotifType',formatter:'com.sap.incture.IMO_PM.formatter.formatter.fnToggleBreakdownVisibility'}">
							<Label text="{i18n>malfnsTime}"></Label>
							<TimePicker value="{oNotificationViewModel>/StartTime}" valueFormat="HH:mm" displayFormat="HH:mm" placeholder="HH:mm"
								change="fnValidateMalFunDates" class="inputRadius" width="90%"
								enabled="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setEnabledBasedOnStatus'}">
								<customData>
									<core:CustomData key="dateType" value="StartTime"/>
								</customData>
							</TimePicker>
						</VBox>
					</VBox>
					<VBox class="gridPadding"
						visible="{path:'oNotificationDataModel>/Breakdown', formatter:'com.sap.incture.IMO_PM.formatter.formatter.formatBooleanBreakDown'}">
						<VBox
							visible="{path:'oNotificationDataModel>/NotifType',formatter:'com.sap.incture.IMO_PM.formatter.formatter.fnToggleBreakdownVisibility'}">
							<Label text="{i18n>malfnedate}"></Label>
							<DatePicker placeholder="dd-MM-yyyy" dateValue="{oNotificationDataModel>/Enddate}" width="90%" displayFormat="dd-MM-yyyy"
								change="fnValidateMalFunDates" class="inputRadius"
								enabled="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setEnabledBasedOnStatus'}">
								<customData>
									<core:CustomData key="dateType" value="Enddate"/>
								</customData>
							</DatePicker>
						</VBox>
					</VBox>
					<VBox class="gridPadding"
						visible="{path:'oNotificationDataModel>/Breakdown', formatter:'com.sap.incture.IMO_PM.formatter.formatter.formatBooleanBreakDown'}">
						<VBox
							visible="{path:'oNotificationDataModel>/NotifType',formatter:'com.sap.incture.IMO_PM.formatter.formatter.fnToggleBreakdownVisibility'}">
							<Label text="{i18n>malfnetime}"></Label>
							<TimePicker value="{oNotificationViewModel>/EndTime}" valueFormat="HH:mm" displayFormat="HH:mm" placeholder="HH:mm"
								change="fnValidateMalFunDates" class="inputRadius" width="90%"
								enabled="{path:'mLookupModel>/SysStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.setEnabledBasedOnStatus'}">
								<customData>
									<core:CustomData key="dateType" value="EndTime"/>
								</customData>
							</TimePicker>
						</VBox>
					</VBox>
				</l:Grid>
			</ScrollContainer>
		</content>
