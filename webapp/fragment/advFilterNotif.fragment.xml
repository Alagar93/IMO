<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Dialog contentWidth="50%" title="Advance Filter" class="dialogHeader sapUiSizeCompact">
		<content>
			<VBox class="sapUiSmallMargin">
				<CheckBox class="sapUiTinyMargin" text="{i18n>checkfilter}" selected="{mLookupModel>/sUnAssignedWOFlag}"/>
				<l:Grid defaultSpan="L6 M4 S6" class="sapUiSmallMarginTopBottom">
					<VBox class="sapUiTinyMargin">
						<Label text="{i18n>notif_stat}" class="sapUiTinyMarginTop"/>
						<ComboBox width="100%" items="{ path: 'mLookupModel>/aNotifStatus', sorter: { path: 'text' } }"
							selectedKey="{mLookupModel>/sNotifStatusFilter}">
							<core:Item key="{mLookupModel>key}" text="{mLookupModel>key}"/>
						</ComboBox>
					</VBox>
					<VBox class="sapUiTinyMargin">
						<Label text="{i18n>notifID}" class="sapUiTinyMarginTop"/>
						<Input width="100%" value="{mLookupModel>/sNotifIdFilter}"></Input>
					</VBox>
					<VBox class="sapUiTinyMargin">
						<Label text="{i18n>equip}" class="sapUiTinyMarginTop"/>
						<Input width="100%" showValueHelp="true" value="{mLookupModel>/sNotifEquipFilter}" valueHelpRequest="equipmentValueHelp"></Input>
					</VBox>
					<VBox class="sapUiTinyMargin">
						<Label text="{i18n>breakDown}" class="sapUiTinyMarginTop"/>
						<ComboBox width="100%" items="{ path: 'mLookupModel>/aBDown'}" selectedKey="{mLookupModel>/sNotifBDFilter}">
							<core:ListItem key="{mLookupModel>des}" text="{mLookupModel>des}"/>
						</ComboBox>
					</VBox>
					<VBox class="sapUiTinyMargin">
						<Label text="{i18n>prior}" class="sapUiTinyMarginTop"/>
						<ComboBox width="100%" items="{ path: 'mLookupModel>/aPrioritySet', sorter: { path: 'text' } }"
							selectedKey="{mLookupModel>/sNotifPriorFilter}">
							<core:Item key="{mLookupModel>PRIOK}" text="{mLookupModel>PRIOKX}"/>
						</ComboBox>
					</VBox>
					<VBox class="sapUiTinyMargin">
						<Label text="{i18n>WORK_CENTER}" class="sapUiTinyMarginTop"></Label>
						<ComboBox width="100%" showSecondaryValues="true" items="{path:'mLookupModel>/aWorkCenterSet',sorter:{ path: 'text' }}"
							selectedKey="{mLookupModel>/sNotifWkCenterFilter}">
							<core:ListItem key="{mLookupModel>WorkcenterId}" additionalText="{mLookupModel>WorkcenterDesc}" text="{mLookupModel>WorkcenterId}"/>
						</ComboBox>
					</VBox>
					<VBox class="sapUiTinyMargin">
						<Label text="CreatedOn Start Date" class="sapUiTinyMarginTop"></Label>
						<DatePicker width="100%" value="{mLookupModel>/sCreatedOnStart}" valueFormat="MM/dd/yyyy" displayFormat="MMM dd,yyyy"
							maxDate="{path:'mLookupModel>/sCreatedOnEnd',formatter:'com.sap.incture.IMO_PM.formatter.formatter.StartDateValidation'}"></DatePicker>
					</VBox>
					<VBox class="sapUiTinyMargin">
						<Label text="CreatedOn End Date" class="sapUiTinyMarginTop"></Label>
						<DatePicker width="100%" value="{path:'mLookupModel>/sCreatedOnEnd'}" valueFormat="MM/dd/yyyy" displayFormat="MMM dd,yyyy"
							minDate="{path:'mLookupModel>/sCreatedOnStart',formatter:'com.sap.incture.IMO_PM.formatter.formatter.EndDateValidation'}"></DatePicker>
					</VBox>
				</l:Grid>
			</VBox>
		</content>
		<buttons>
			<Button text="{i18n>cancel}" press="onCancelDialogNotif" class="murphyClearBtn"/>
			<Button class="murphyClearBtn" text="{i18n>CLEAR}" press="onClearNotifFilter"/>
			<Button text="{i18n>save}" class="murphyDialogBtn" press="onSaveNotifFilter"/>
			<Button text="Apply" press="onApplyFilterNotif" class="murphyDialogBtn"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition >