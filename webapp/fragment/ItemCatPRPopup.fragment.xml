<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" class="sapUiSizeCompact">
	<Dialog title="{}" contentWidth="40%" contentHeight="60%" showHeader="false" verticalScrolling="false" class="sapUiSizeCompact">
		<Page title="Change Corrective Maintenance Order" showHeader="true" titleAlignment="Center">
			<content>
				<l:Grid >
					<VBox class="sapUiSmallMarginTop">
						<Label text="{i18n>MAT_DESC}"></Label>
						<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/MatlDesc}"></Input>
						<layoutData>
							<l:GridData span="XL6 L12 M12 S6"/>
						</layoutData>
					</VBox>
					<VBox class="sapUiSmallMarginTop">
						<Label text="{i18n>MAT_REQ_QTY}"></Label>
						<HBox>
							<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/RequirementQuantity}" width="100%"></Input>
							<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/RequirementQuantityUnit}" width="100%"></Input>
						</HBox>
						<layoutData>
							<l:GridData span="XL6 L6 M6 S6"/>
						</layoutData>
					</VBox>
					<VBox class="sapUiSmallMarginTop">
						<Label text="Price"></Label>
						<HBox>
							<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/Price}" width="100%"></Input>
							<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/Currency}" width="100%"></Input>
						</HBox>
						<layoutData>
							<l:GridData span="XL6 L6 M6 S6"/>
						</layoutData>
					</VBox>
					<VBox class="sapUiSmallMarginTop">
						<Label text="Per"></Label>
						<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/PriceUnit}"></Input>
						<layoutData>
							<l:GridData span="XL6 L6 M6 S6"/>
						</layoutData>
					</VBox>
					<VBox class="sapUiSmallMarginTop">
						<Label text="Material Group"></Label>
						<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/MaterialGroup}"></Input>
						<layoutData>
							<l:GridData span="XL6 L6 M6 S6"/>
						</layoutData>
					</VBox>
					<VBox class="sapUiSmallMarginTop">
						<Label text="Purch. Group"></Label>
						<HBox>
							<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/PurchGrp}" width="100%"></Input>
							<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/PurchOrg}" width="100%"></Input>
						</HBox>
						<layoutData>
							<l:GridData span="XL6 L6 M6 S6"/>
						</layoutData>
					</VBox>
					<VBox class="sapUiSmallMarginTop">
						<Label text="Vendor"></Label>
						<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/VendorNo}"></Input>
						<layoutData>
							<l:GridData span="XL6 L6 M6 S6"/>
						</layoutData>
					</VBox>
					<VBox class="sapUiSmallMarginTop">
						<Label text="Agreement"></Label>
						<HBox>
							<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/Agreement}" width="100%"></Input>
							<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/AgmntItem}" width="100%"></Input>
						</HBox>
						<layoutData>
							<l:GridData span="XL6 L6 M6 S6"/>
						</layoutData>
					</VBox>
					<VBox class="sapUiSmallMarginTop">
						<Label text="Recipient"></Label>
						<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/Recipient}"></Input>
						<layoutData>
							<l:GridData span="XL6 L6 M6 S6"/>
						</layoutData>
					</VBox>
					<VBox class="sapUiSmallMarginTop">
						<Label text="Requisitioner"></Label>
						<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/Requisitioner}"></Input>
						<layoutData>
							<l:GridData span="XL6 L6 M6 S6"/>
						</layoutData>
					</VBox>
				</l:Grid>
			</content>
			<footer>
				<Toolbar>
					<Button class="transparentBtn createNotifClearBtn" icon="sap-icon://decline" iconFirst="true" text="Cancel" press="onCancelItemCatPR"/>
					<ToolbarSpacer/>
					<Button type="Emphasized" text="Save" press="onSaveItemCatPR">
						<customData>
							<core:CustomData key="dateType" value="CREATE_ORDER"/>
						</customData>
					</Button>
				</Toolbar>
			</footer>
		</Page>
	</Dialog>
</core:FragmentDefinition >