<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" class="sapUiSizeCompact">
	<Dialog contentHeight="50%" contentWidth="30%" title="Search Users" class="dialogHeader">
		<content>
			<SearchField search="onSearchUser" width="97%" placeholder="{i18n>searchuser}" class="sapUiTinyMargin"/>
			<Table width="97%" mode="SingleSelectLeft" items="{path: 'mLookupModel>/aUsers'}" selectionChange="onSetReportedbyUser" class="sapUiTinyMargin">
				<columns>
					<Column>
						<Text text="{i18n>M-Id}"/>
					</Column>
					<Column>
						<Text text="{i18n>name}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells >
							<Text text="{mLookupModel>Bname}"/>
							<Text text="{mLookupModel>NameTextc}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<buttons>
			<Button text="{i18n>cancel}" press="onCancelDialogAssignUser" class="btnTransparent createNotifClearBtn" icon="sap-icon://decline" iconFirst="true"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition >